<h1>Edit your Song</h1>
<form method="POST" action="/songs/<%= @song.slug %>">
    <input type="hidden" id="hidden" name="_method" value="patch">
    <label>Name: </label>
    <input type="text" id="Name" name="song[name]" value="<%= @song.name %>">
    <br>
    <label>Artist: </label>
    <input type="text" id="Artist Name" name="song[artist]" value="<%= @song.artist.name %>">
    <br>
    <label>Genres: </label>
    <% Genre.all.each do |genre| %>
        <input type="checkbox" id="<%= genre.name %>" name="song[genres][]" value="<%= genre.id %>" <%= "checked" if @song.genres.include?(genre) %>><%= genre.name %>
    <% end %>
    <br><br>
    <input type="submit" value="Save">
</form>